  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-static-top bg-primary">
      <!--<a href="#" class="navbar-brand"></a>-->
      <div class="container">
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= social_links.twitter %>" target="_blank">
              <i class="fa fa-twitter"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= social_links.facebook %>" target="_blank">
              <i class="fa fa-facebook"></i>
            </a>
          </li>
        </ul>

        <ul class="nav navbar-nav pull-xs-right">
          <li class="nav-item">
            <a class="nav-link" href="#speakers">Speakers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#venue">Venue</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#lodging">Lodging</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#sponsors">Sponsors</a>
          </li>
        </ul>
      </div>
    </nav>

  <div class="hero">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="logo-container">
            <% link_to '/' do %>
              <%= image_tag 'logo.png', class: 'logo', alt: 'Erie Day of Code 2017', title: 'Erie Day of Code 2017' %>
            <% end %>
          </div>
        </div>

        <div class="col-lg-4 col-lg-offset-2">
          <section class="event-info">
            <h1 class="date">
              June 16, 2017
            </h1>
            <h2 class="venue">
                <%= link_to venue.name, venue.url %>
            </h2>
            <div class="purchase-button-wrap">
              <%= link_to "Get Yours Now!", tickets_url, class: 'btn btn-primary btn-lg btn-block', target: '_blank' %>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>

  <%= yield %>

  <%= javascript_include_tag :all %>

  <footer class="site-footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <p>
            If you have questions or need more information,
            send an email to
            <%= mail_to 'contact@eriedayofcode.com' %>
          </p>

          <p>
            Please review our
            <%= link_to 'Code of Conduct', '/code-of-conduct.html' %>
          </p>

          <p>
            Erie Day of Code is organized by members of the
            <%= link_to 'Coderie Software Development Group', 'http://meetup.com/coderie' %>
          </p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
